CREATE TABLE USERS(
	ID INTEGER PRIMARY KEY,
	USERNAME VARCHAR(10) NOT NULL,
	PASSWORD VARCHAR(10) NOT NULL,
);

CREATE TABLE NOTICE (
	SN INTEGER PRIMARY KEY ASC,
	CREATEDTO VARCHAR(10) NOT NULL,
	MESSAGE TEXT NOT NULL,
	CREATEDBY VARCHAR(10) NOT NULL,
	CREATEDON DATETIME DEFAULT CURRENT_TIMESTAMP,
	ISREAD VARCHAR(3) NOT NULL DEFAULT 'NO' CHECK(ISREAD IN('YES','NO')),
	FOREIGN KEY(CREATEDBY) REFERENCES USERS(USERNAME),
	FOREIGN KEY(CREATEDTO) REFERENCES USERS(USERNAME)
);

CREATE TABLE USERDETAILS{
	SN INTEGER PRIMARY KEY ASC,
	FIRSTNAME VARCHAR(20),
	LASTNAME VARCHAR(20),
	PHONE LONG INT,
	DOB DATE,
	USERNAME VARCHAR(10),
	FOREIGN KEY(USERNAME) REFERENCES USERS(USERNAME)

};
